{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sbsp_remote",
  "version": "0.1.0",
  "identifier": "com.keinsleif.sbsp",
  "build": {
    "beforeDevCommand": {
      "script": "pnpm dev --port 1422",
      "cwd": "../sbsp_frontend"
    },
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": {
      "script": "pnpm build",
      "cwd": "../sbsp_frontend"
    },
    "frontendDist": "../sbsp_frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SBS Player Remote",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": false,
        "create": false
      },
      {
        "label": "connect",
        "title": "Connect",
        "url": "/connect",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": false
      },
      {
        "label": "pick_file",
        "title": "Select Files",
        "url": "/pick_file",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": false,
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
