{
  "$schema": "https://schema.tauri.app/config/2",
  "mainBinaryName": "sbsp_remote",
  "productName": "SBSP Remote",
  "version": "0.1.1",
  "identifier": "com.keinsleif.sbsp.remote",
  "build": {
    "beforeDevCommand": {
      "script": "pnpm dev --port 1422",
      "cwd": "../sbsp_frontend"
    },
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": {
      "script": "pnpm build",
      "cwd": "../sbsp_frontend"
    },
    "frontendDist": "../sbsp_frontend/dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "SBS Player Remote",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": false,
        "create": false
      },
      {
        "label": "connect",
        "title": "Connect",
        "url": "/connect",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": false
      },
      {
        "label": "pick_file",
        "title": "Select Files",
        "url": "/pick_file",
        "width": 1280,
        "height": 720,
        "dragDropEnabled": false,
        "create": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": null,
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": null
    },
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEyMkY0OTQ0RDk0NjA3MEMKUldRTUIwYlpSRWt2RXYwbkRpT0ZDTWhKcnN2ZS9zMFFDSEFyeTkxR2w3STlEY2Rrckk5cHcyc1IK",
      "endpoints": [
        "https://keinsleif.github.io/sbsp/remote/latest.json"
      ]
    }
  }
}
